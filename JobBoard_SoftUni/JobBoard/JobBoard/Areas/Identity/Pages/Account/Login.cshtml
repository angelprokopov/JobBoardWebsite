@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<div class="container">
    <h2 class="mb-4">Портал за обяви за работа</h2>
    <p>Моля влезте в профила си, за да можете да кандидатствате</p>
    <form id="account" method="post" asp-page="/Account/Login">
        @Html.AntiForgeryToken()
        <div class="form-group mb-3">
            <label asp-for="Input.Email" class="form-label">Имейл</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Input.Password" class="form-label">Парола</label>
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="d-flex align-items-center justify-content-between mb-4">
            <a asp-area="Identity" asp-page="/Account/Register" class="text-muted small"></a>
        </div>

        <div class="d-grid mt-3">
            <button id="login-submit" type="submit" class="btn btn-primary w-100">Вход</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
