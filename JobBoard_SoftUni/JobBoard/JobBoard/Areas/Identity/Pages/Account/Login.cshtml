@page
@model LoginModel

<link href="~/css/login.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Вход";
}

<div class="container d-flex align-items-center justify-content-center">
    <div class="row shadow-lg p-4 rounded bg-white">
        <div class="col-md-6 text-center d-flex flex-column align-items-center justify-content-center">
            <h2 class="mb-4">Портал за обяви за работа</h2>
            <p class="mb-4">Моля влезте в профила си, за да можете да кандидатствате</p>

            <!-- Social Login Buttons -->
            <div class="mb-3 w-100">
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-action="ExternalLogin" asp-route-provider="Google" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="google-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                            <img src="https://img.icons8.com/color/48/000000/google-logo.png" alt="Google Logo">
                                            @provider.DisplayName
                                        </button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }

            </div>
        </div>

        <!-- Divider -->
        <div class="col-md-1 d-flex align-items-center justify-content-center">
            <span class="text-muted">или</span>
        </div>

        <!-- Login Form -->
        <div class="col-md-5">
            <form method="post" action="/Account/Login">
                <div class="form-group mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Имейл</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mb-3">
                    <a href="#" class="text-decoration-none">Забравена парола?</a>
                    <a href="/Account/Register" class="text-decoration-none">Безплатна регистрация</a>
                </div>

                <button type="submit" class="btn btn-primary w-100">Вход</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
