@model IEnumerable<CompanyViewModel>

@{
    ViewData["Title"] = "Всички компании";
}

<style>
    .card {
        transition: 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 7px 15px rgba(0,0,0,0.3);
    }

    .card-title {
        font-weight: bold;
    }

    .card-img-top {
        border-bottom: 1px solid #f8f9fa;
    }
</style>

<div class="container my-5">
    <h2 class="text-center mb-4"></h2>
</div>

<div class="row row-cols-3 row-cols-md-3 g-4">
    @foreach(var company in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="" class="card-img-top" alt="@company.Name logo" style="height: 200px; object-fit: cover" />
                <div class="card-body">
                    <h4 class="card-title text-primary">@company.Name</h4>
                    <p class="card-text text-muted">@company.Description</p>
                    <p class="card-text"><i class="bg-info bi-geo-alt-fill text-danger"></i> @company.Location</p>
                </div>
                <div class="card-footer text-center bg-white border-0">
                    <a href="" class="btn btn-outline-primary btn-sm"></a>
                    <a href="" class="btn btn-outline-secondary btn-sm" target="_blank"></a>
                </div>
            </div>
        </div>
    }
</div>