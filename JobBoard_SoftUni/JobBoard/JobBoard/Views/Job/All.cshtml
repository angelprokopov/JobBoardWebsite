@using JobBoard.Data.Models
@model PaginatedList<JobAllViewModel>

<link href="~/css/jobs.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Обяви за работа";
}


<div class="container mt-4">
    <h2 class="text-center mb-4"></h2>
</div>

<!--Search section-->
<div class="row mb-4">
    <div class="col-md-12">
        <form method="get" class="d-flex justify-content-between">
            <input type="text" class="form-control me-2" name="search" />
            <button type="submit" class="btn btn-primary">Търсене</button>
        </form>
    </div>
</div>

<!--Job Listings-->
<div class="row">
    @foreach(var job in Model) 
    {
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-body d-flex flex-wrap align-items-center">
                    <!--Job Title-->
                    <div class="col-md-8">
                        <h4 class="card-title mb-2">
                            <a href="" class="text-dark">@job.Title</a>
                        </h4>
                        <p class="mb-1 text-muted">@job.CompanyName - @job.Location</p>
                        <p class="mb-0">
                            <span class="text-primary">@job.Salary.ToString("N2") лв</span> •
                            Публикувана на: @job.DatePosted.ToString("dd.mm.yyyy")
                        </p>
                    </div>
                    <!--Apply button-->
                    <div class="col-md-4 text-end">
                        <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-outline-primary">Детайли</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>