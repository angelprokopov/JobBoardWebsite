@model JobFavoriteViewModel

@{
    ViewData["Title"] = "Бележник";
}

<div class="container mt-4">
    <h3 class="text-center">Бележник</h3>
    <p class="text-muted text=center"></p>
    @if (Model.Jobs != null && Model.Jobs.Any()) 
    {
       <table class="table table mt-3">
           <thead class="table-light">
               <tr>
                   <th>Позиция</th>
                   <th>Фирма</th>
                   <th>Локация</th>
                   <th>Дата на публикуване</th>
               </tr>
           </thead>
           <tbody>
               @foreach(var job in Model.Jobs) 
               {
                   <tr>
                       <td>@job.Title</td>
                       <td>@job.Company</td>
                       <td>@job.Location</td>
                       <td>@job.PostedDate.ToShortDateString()</td>
                       <td>
                           <a asp-action="Details" asp-route-id="@job.JobId" class="btn btn-sm btn-primary"></a>
                           <a asp-action="Details" asp-route-id="@job.JobId" class="btn btn-sm btn-danger"></a>
                       </td>
                   </tr>
               }
           </tbody>
       </table>
    }
</div>