@{
    ViewData["Title"] = "Начало";
}

<div class="hero-section text-center text-white" style="background:url('@Url.Content("~/images/AdobeStock_753208233_Preview.jpeg")') no-repeat;background-size: cover; height: 60vh;">
    <div class="overlay" style="background:rgba(0, 0, 0, 0.6); height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
         <h2 class="display-3 fw-bold">Добре дошли</h2>
         <p class="lead">Свържи се с топ компании и докарай своята кариера до ново ниво</p>
         <a href="" class="btn btn-primary btn-sm mt-2">Разгледай обявите</a>
    </div>
</div>

<div class="search-section py-3 bg-light">
    <div class="container">
        <h2 class="text-center mb-3"></h2>
        <form method="get" action="/Job">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="title" placeholder="" />
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" name="location" placeholder="Местоположение" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Търси обяви</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="features-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Why Choose JobBoard?</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <i class="bi bi-briefcase-fill text-primary fs-1"></i>
                <h4 class="mt-3">Top Companies</h4>
                <p>Partnered with industry-leading companies to provide you with the best job opportunities.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-person-check-fill text-success fs-1"></i>
                <h4 class="mt-3">Verified Employers</h4>
                <p>All employers are verified to ensure legitimacy and trustworthiness.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="bi bi-graph-up-arrow text-danger fs-1"></i>
                <h4 class="mt-3">Career Growth</h4>
                <p>Find jobs that match your skills and grow your career with confidence.</p>
            </div>
        </div>
    </div>
</div>