
@model HomeViewModel

@{
    ViewData["Title"] = "Начало";
}

<div class="hero-section text-center text-white" style="background:url('@Url.Content("~/images/AdobeStock_753208233_Preview.jpeg")') no-repeat;background-size: cover; height: 60vh;">
    <div class="overlay" style="background:rgba(0, 0, 0, 0.6); height: 100%; display: flex; flex-direction: column; justify-content: center; align-items: center;">
        <h2 class="display-3 fw-bold">Добре дошли</h2>
        <p class="lead">Свържи се с топ компании и докарай своята кариера до ново ниво</p>
        
        @if (Model.IsAuthenticated)
        {
            <a href="/Job/All" class="btn btn-primary btn-sm mt-2">Разгледай обявите</a>
        }
        else
        {
            <a href="/Identity/Account/Register" class="btn btn-primary btn-sm mt-2">Регистрирайте се сега</a>
        }
    </div>
</div>

@if (Model.IsAuthenticated)
{
    <div class="user-section py-3 bg-light">
        <div class="container">
            <h3 class="text-center mb-3">Добре дошли, @(Model.Role == "Admin" ? "Администратор" : Model.Role == "Employer" ? "Работодател" : "Потребител")</h3>
            
            @if (Model.Role == "User")
            {
                <div class="row text-center">
                    <div class="col-md-4">
                        <a href="/Applications/MyApplications" class="btn btn-outline-primary w-100">Моите кандидатури</a>
                    </div>
                    <div class="col-md-4">
                        <a href="/Favorite/Index" class="btn btn-outline-success w-100">Запазени обяви</a>
                    </div>
                </div>
            }
            else if (Model.Role == "Employer")
            {
                <div class="row text-center">
                    <div class="col-md-6">
                        <a href="/Applications/All" class="btn btn-outline-primary w-100">Всички кандидатури</a>
                    </div>
                    <div class="col-md-6">
                        <a href="/Applications/Manage" class="btn btn-outline-danger w-100">Управлявай кандидатури</a>
                    </div>
                </div>
            }
            else if (Model.Role == "Admin")
            {
                <div class="row text-center">
                    <div class="col-md-12">
                        <a href="/Admin/Dashboard" class="btn btn-outline-danger w-100">Администраторски панел</a>
                    </div>
                </div>
            }
        </div>
    </div>
}